
@using Sandbox.UI
@inherits Panel
@namespace Facepunch.Gunfight.UI
@attribute [StyleSheet]

<root>
	<div class="header">
		<div class="second">
			@if ( Second.IsValid() )
			{
				<div class="entry big">
					<img class="avatar" src="avatar:@Second.SteamId"/>
					<label class="score">@( Second.GetInt( "frags" ) )</label>
					<label class="name">@Second.Name</label>
				</div>
			}
			else
			{
				<div class="entry big waiting">
					<i class="text">question</i>
				</div>
			}
		</div>

		<div class="first">
			<div class="entry big">
				<img class="avatar" src="avatar:@First.SteamId"/>
				<label class="score">@( First.GetInt( "frags" ) )</label>
				<label class="name">@(First.Name)</label>
			</div>
		</div>

		<div class="third">
			@if ( Third.IsValid() )
			{
				<div class="entry big">
					<img class="avatar" src="avatar:@Third.SteamId"/>
					<label class="score">@( Third.GetInt( "frags" ) )</label>
					<label class="name">@Third.Name</label>
				</div>
			}
			else
			{
				<div class="entry big waiting">
					<i class="text">question</i>
				</div>
			}
		</div>
		
	</div>
	
	<label class="title">FIRST TO @( ( GamemodeSystem.Current as FFAGamemode )?.MaximumScore) WINS</label>

	@*	<div class="entries">
		@foreach ( var cl in Clients.Skip( 3 ) )
		{
			<div class="entry">
				<img class="avatar" src="avatar:@cl.SteamId"/>
				<label class="score">@( cl.GetInt( "frags" ) )</label>
			</div>
		}
	</div> *@
</root>

@code
{
	public IClient First => Clients.ElementAtOrDefault( 0 );
	public IClient Second => Clients.ElementAtOrDefault( 1 );
	public IClient Third => Clients.ElementAtOrDefault( 2 );
	
	public IEnumerable<IClient> Clients => Game.Clients.OrderByDescending( x => x.GetInt( "frags" ) );
	
	protected override int BuildHash()
	{
		return HashCode.Combine( Game.Clients.Count, Game.Clients.Sum( x => x.GetInt( "frags" ) ) );
	}
}
