@using Sandbox.UI

@inherits Panel
@namespace Facepunch.Gunfight.UI
@attribute [StyleSheet]

<root>
</root>

@code
{
    public static ModalOverlay Instance { get; set; }

    public ModalOverlay()
    {
        Instance = this;
    }

    public void Add( BaseModal modal )
    {
        AddChild( modal );
    }

    public override void OnButtonTyped( ButtonEvent e )
    {
        if ( e.Button == "escape" )
        {
            ModalSystem.Pop();
        }
    }
}
